<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">
            org.hibernate.dialect.SQLServerDialect
        </property>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="connection.autocommit">true</property>


        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;database=NLP_DATASTORE;integratedSecurity=true</property>
        <mapping class="edu.utah.blulab.db.models.AnnotationResultsDao"/>
        <mapping class="edu.utah.blulab.db.models.DocumentIdentifierDao"/>


    </session-factory>
</hibernate-configuration>